<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme.CardContent" parent="BaseTheme.CardContent"/>
    <style name="BaseTheme.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_large</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.TextView" parent="BaseTheme.TextView"/>
    <style name="BaseTheme.TextView">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="AppTheme.SettingsHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/default_size_for_headers</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.SettingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/vertical_size_header</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pink_400</item>
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_large</item>
    </style>

    <style name="AppTheme.SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_large</item>
        <item name="android:minHeight">@dimen/default_size_for_list_items</item>
    </style>

</resources>